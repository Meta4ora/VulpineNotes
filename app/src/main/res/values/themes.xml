<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Тема для Splash Screen -->
    <style name="Theme.VulpineNotes.Splash" parent="Theme.SplashScreen">
        <!-- Адаптивная иконка -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <item name="windowSplashScreenBackground">@color/cardview_dark_background</item>

        <item name="windowSplashScreenAnimationDuration">800</item>

        <!-- Тема после сплеша -->
        <item name="postSplashScreenTheme">@style/Theme.VulpineNotes</item>
    </style>

    <style name="Theme.VulpineNotes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">#FF9800</item> <!-- Оранжевый -->
        <item name="colorOnPrimary">#000000</item>
        <item name="colorPrimaryContainer">#FFB74D</item>
        <item name="colorOnPrimaryContainer">#000000</item>

        <!-- Серый для тёмной темы -->
        <item name="colorSurface">#F5F5F5</item>
        <item name="colorOnSurface">#000000</item>
        <item name="colorOnSurfaceVariant">#424242</item>

        <!-- Фон и статус-бар -->
        <item name="android:windowBackground">#F5F5F5</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="materialAlertDialogTheme">@style/CustomAlertDialogTheme</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- Цвет текста -->
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>

        <!-- Фон диалога -->
        <item name="android:background">?attr/colorSurface</item>

        <!-- Стили кнопок -->
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <!-- Цвет текста кнопок -->
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <!-- Немного радиуса -->
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Widget.App.Switch.Custom" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@animator/switch_thumb_selector</item>
        <item name="trackTint">@animator/switch_track_selector</item>
        <!-- Дополнительно -->
        <item name="thumbElevation">6dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>