<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemTextColor">?attr/colorOnPrimary</item>
        <item name="itemIconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.VulpineNotes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- В тёмной теме: оранжевый → серый -->
        <item name="colorPrimary">#616161</item> <!-- Серый, светлее фона -->
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#424242</item>
        <item name="colorOnPrimaryContainer">#FFFFFF</item>

        <!-- Фон -->
        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorOnSurfaceVariant">#BBBBBB</item>

        <!-- Фон и статус-бар -->
        <item name="android:windowBackground">#121212</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>