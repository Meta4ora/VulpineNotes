<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/book_cover_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="3:5">

        <!-- Обложка -->
        <ImageView
            android:id="@+id/book_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/book_cover_placeholder"
            android:contentDescription="Обложка книги" />

        <!-- Тёмная полоса внизу -->
        <View
            android:id="@+id/bottom_overlay"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="bottom"
            android:background="?attr/colorPrimary" />

        <!-- Текст с количеством глав (слева внизу) -->
        <TextView
            android:id="@+id/chapters_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="24dp"
            android:text="12 глав"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/bottom_overlay"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Кнопка «Сохранить в облако» (слева от трёх точек) -->

        <!-- Кнопка меню (три точки) -->
        <ImageView
            android:id="@+id/book_menu_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Меню книги"
            android:padding="0dp"
            android:src="@drawable/ic_more_vert" />

    </androidx.cardview.widget.CardView>

    <!-- Название книги под карточкой -->
    <TextView
        android:id="@+id/book_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Зов Ктулху Лавкрафт"
        android:textSize="18sp"
        android:textColor="?attr/colorOnPrimary"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/book_cover_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>