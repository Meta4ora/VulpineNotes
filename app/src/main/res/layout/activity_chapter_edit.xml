<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ChapterEditActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_margin="8dp"
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_button"
        android:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="Редактировать главу"
            app:navigationIcon="@drawable/ic_close"
            app:navigationContentDescription="Закрыть"
            app:titleTextColor="?attr/colorOnSurface" />
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/formatting_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom"
        app:cardElevation="2dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="?attr/colorPrimaryContainer"
        app:strokeWidth="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:weightSum="8">

            <ImageButton
                android:id="@+id/btn_bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_format_bold"
                android:contentDescription="Жирный"/>

            <ImageButton
                android:id="@+id/btn_italic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_format_italic"
                android:contentDescription="Курсив"/>

            <ImageButton
                android:id="@+id/btn_underline"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_format_underlined"
                android:contentDescription="Подчёркивание"/>

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="4dp"
                android:background="?attr/colorOutlineVariant" />

            <ImageButton
                android:id="@+id/btn_align_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_format_align_left"
                android:contentDescription="По левому краю"/>

            <ImageButton
                android:id="@+id/btn_align_center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_format_align_center"
                android:contentDescription="По центру"/>

            <ImageButton
                android:id="@+id/btn_align_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_format_align_right"
                android:contentDescription="По правому краю"/>

            <ImageButton
                android:id="@+id/btn_justify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_format_align_justify"
                android:contentDescription="По ширине"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <EditText
        android:id="@+id/content_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:gravity="top|start"
        android:padding="18dp"
        android:textSize="16sp"
        android:lineSpacingMultiplier="1.4"
        android:inputType="textMultiLine|textCapSentences"
        android:background="@android:color/transparent"
        android:hint="Начните писать..."
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOutline"
        android:importantForAutofill="yes"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
